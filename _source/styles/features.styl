section
  margin-left auto
  margin-right auto
  text-align left
  max-width 40em

blockquote
  border-left 2px solid lightgray
  padding-left 1em
  margin-bottom 1em

ul
  list-style-type none

.checkmark
  align-self center
  border 1px solid gray
  min-width 2em
  height 2em
  text-align center
  line-height 2em
  border-radius 1em
  margin-right 1em

li
  display flex
  margin-bottom 1em

  strong
    font-weight 500
    font-size 1.2em
    color rgb(180, 180, 180)
    margin-bottom 0.5em

  p
    color rgb(180, 180, 180)

  img
    opacity 0.3
    max-width 4em
    max-height 4em
    margin-right 1em

backgroundGray = rgb(230, 230, 230)

.ready
  p, strong
    color black

  code
    background-color lighten(backgroundGray, 10%)
    border-color lighten(backgroundGray, 5%)
    color rgb(80, 80, 80)

  img
    opacity 1

  .checkmark
    background-color mainColor
    border-color mainColorMuted
