#landingPage
  text-align center

#logo
  margin-right 2em

  img
    display inline-block
    height 32px
    width 32px
    vertical-align middle
    position relative
    bottom 0.4em
    margin-right 0.5em

  span
    font-size 1.4em
    font-weight 500


.subtitle
  font-size: 1.5em
  margin-bottom 2em

.wrapper
  min-height 100%
  background-color white
  border 1px solid lightgray
  margin 0 auto
  width 100%

img#profile
  width 160px
  height 160px
  margin-bottom 1em

.title
  color contrastColor
  font-family 'Josefin Slab', sans-serif
  font-size 2.5em
  font-weight 600
  line-height 1
  margin-bottom 2rem
  border-bottom none

#mce-responses
  display inline-block

#mce-EMAIL
  max-width 18em
  margin-bottom 1em
  margin-right 1em


#comparisonTable
  border-collapse collapse

  caption
    margin-bottom 1em
    font-size 2em

  th, td
    border-color mutedBgColor
    border-style solid
    border-width 1px
    padding 0.8em 1.6em

  thead
    font-size 1.2em
    tr
      background-color rgba(0, 0, 0, 0.02)
      :nth-of-type(4)
        background-color primaryColor

  tr
    &:nth-of-type(2n)
      background-color rgba(0, 0, 0, 0.02)
      :nth-of-type(4)
        background-color primaryColor

    :nth-of-type(4)
      background-color lighten(primaryColor, 30%)
      border-color lighten(primaryColorMuted, 30%)

    :nth-of-type(3)
      border-right-color lighten(primaryColorMuted, 30%)

  .priceRow
    vertical-align top
    strong
      white-space nowrap
      font-size 2em
    small
      white-space nowrap
