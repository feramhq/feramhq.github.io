#pricing
  main
    text-align center

  .title
    font-family inherit
    font-size 3rem
    font-weight 100

  .tableFootnote
    text-align right


#comparisonTable
  border-collapse collapse

  caption
    margin-bottom 1em
    font-size 2em

  th, td
    border-color mutedBgColor
    border-style solid
    border-width 1px
    padding 0.8em 1.6em

  thead
    font-size 1.2em
    tr
      background-color rgba(0, 0, 0, 0.02)
      :nth-of-type(4)
        background-color primaryColor

  tr
    &:nth-of-type(2n)
      background-color rgba(0, 0, 0, 0.02)
      :nth-of-type(4)
        background-color primaryColor

    :nth-of-type(4)
      background-color lighten(primaryColor, 30%)
      border-color lighten(primaryColorMuted, 30%)

    :nth-of-type(3)
      border-right-color lighten(primaryColorMuted, 30%)

    td:first-of-type
      text-align left

  .priceRow
    vertical-align top
    strong
      white-space nowrap
      font-size 2em
    small
      white-space nowrap
